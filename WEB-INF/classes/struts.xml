<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default">

        <action name="userLogin" class="org.onlinebusiness.servlet.StructsAction.LoginStruts" method="login">
            <result name="success" type="redirectAction">index</result>
            <result name="fail">/Fail.jsp</result>
        </action>

        <action name="userRegister" class="org.onlinebusiness.servlet.StructsAction.RegisterStruts" method="registerUser" >
            <result name="successfulRegister" type="redirectAction">index</result>
            <result name="fail">/Fail.jsp</result>
        </action>

        <action name="index" class="org.onlinebusiness.servlet.StructsAction.HomeStruts" method="allItems">
            <result name="allItems">/index.jsp</result>
        </action>

        <action name="view_item" class="org.onlinebusiness.servlet.StructsAction.HomeStruts" method="viewItem">
            <result name="viewItem">/Item.jsp</result>
        </action>
        	
    </package>
</struts>
